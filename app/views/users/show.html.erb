<h1>ユーザー情報詳細</h1>

<table border="1">
  <tbody>
    <tr>
      <th>ID</th>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <th>ユーザー名</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>アドレス</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>ユーザー登録日時</th>
      <td><%= @user.created_at %></td>
    </tr>
  </tbody>
</table>
